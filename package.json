{
  "name": "app-reims-patrimoine-coaching",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm db:check && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/data/db/scripts/migrate.ts",
    "db:clear": "tsx src/data/db/scripts/clear.ts",
    "db:clear-data": "tsx src/data/db/scripts/clear-data.ts",
    "db:check": "tsx src/data/db/scripts/check.ts",
    "db:push": "drizzle-kit push",
    "db:drop": "drizzle-kit drop",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/data/db/scripts/seed.ts",
    "db:reset-seed": "pnpm db:clear && pnpm db:drop && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "test-husky": "vitest run",
    "test": "vitest --watch"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.2.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "lucide-react": "^0.522.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
